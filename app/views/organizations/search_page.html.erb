<h1>Give me some search, yo!</h1>

<form ng-controller="FormController" action="/submit_query" method="GET">

  <div ng-repeat="number in filterNumbers" class="row filter-set-{{number}}">

    <div class="col-md-1 col-lg-1">
      {{number}}
    </div>

    <div class="col-md-3 col-lg-3 form-group">
      <label for="[query_{{number}}][property]">Property</label>
      <input name="[query_{{number}}][property]" class="form-control">
    </div>

    <div class="col-md-3 col-lg-3 form-group">
      <label for="[query_{{number}}][keyword]">Keyword</label>
      <input name="[query_{{number}}][keyword]" class="form-control">
    </div>

    <div class="col-md-3 col-lg-3">
      <button ng-click="removeFilter()">Remove this filter</button>
    </div>

    <div class="clearfix"></div>

  </div>
  
  <button ng-click="pushFilterNumbers()">Add more filters!!!</button>

  <div>{{query}}</div>

  <input type="submit">

</form>